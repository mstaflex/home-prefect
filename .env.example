# ── Prefect Server ────────────────────────────────────────────────────────────
PREFECT_API_URL=http://localhost:4200/api
PREFECT_SERVER_API_HOST=0.0.0.0
PREFECT_SERVER_API_PORT=4200

# ── PostgreSQL (used by Prefect server) ───────────────────────────────────────
POSTGRES_USER=prefect
POSTGRES_PASSWORD=changeme
POSTGRES_DB=prefect
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Full connection string assembled from the above:
# PREFECT_API_DATABASE_CONNECTION_URL=postgresql+asyncpg://prefect:changeme@postgres:5432/prefect

# ── Worker / Client ───────────────────────────────────────────────────────────
# URL of the Prefect API the worker connects to (override on remote clients)
# PREFECT_API_URL=http://<server-ip>:4200/api

# ── Application ───────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
